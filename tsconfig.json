{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/svg/*": ["./src/assets/svg/*"],
      "@/icons/*": ["./src/assets/icons/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/data/*": ["./src/data/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/global/*": ["./src/global/*"],
      "@/server/*": ["./src/server/*"],
      "@/models/*": ["./src/server/models/*"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/typescript/decs.d.ts",
    "src/typescript/server.d.ts"
  ],
  "exclude": ["node_modules"]
}
